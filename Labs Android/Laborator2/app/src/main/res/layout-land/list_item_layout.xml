    <TextView
        android:id="@+id/name"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:id="@+id/price"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:text="Price" />

    <TextView
        android:id="@+id/size"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:text="Size" />
</LinearLayout>